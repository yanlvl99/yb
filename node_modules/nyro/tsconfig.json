{
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "target": "ES6",
    "module": "CommonJS",                        
    "outDir": "./build",                        
    "rootDir": "./",                  
    "strict": true,                           
    "esModuleInterop": true,                
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": ["src/*", "src/*/*","src/**/*/*","./src/**/*","src/*/*/*","src/*/*/*/*"],
  "exclude": ["node_modules", "build", "**/*.spec.ts"]
}